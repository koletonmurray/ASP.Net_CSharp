<!DOCTYPE html>

<html>

<!--
    Layout transfered from the main layout to keep the shop layout similar
    I dropped the sidebar because we don't need it yet 
-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">
            <a class="text-white" style="text-decoration: none" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1">My Bookstore</a>
        </span>    
        <a class="navbar-brand m-lg-2 text-white float-right" asp-page="/Shop">My Cart</a>
        
    </div>
    <div class="row m-1 p-4">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mission10_koletonm
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <!--
        Bootstrap to create the layout of the page.
        Also added the Cart icon in the top right corner by importing the font-awesome library above
     -->
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">
                    <a class="text-white" style="text-decoration: none" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1">My Bookstore</a>
                </div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1 pt-4">
        <div id="categories" class="col-3">
            <!-- Generates the Book category filters -->
            <vc:categories></vc:categories>
            <br />

            <!-- Builds a Carousel to display a series of images that autorotate under the side column-->
            <!-- This section uses the Boostrap Carousel class as well as mx-auto to center the images within the carousel-->
            <div bg-light>
                <div class="text-center bg-light font-weight-bold p-2">Bookstore Favorites</div>
                <div id="carouselExampleIndicators" class="carousel slide bg-light" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-50 mx-auto" style="height: 250px" src="~/img/lesMes.jpg" alt="First slide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-50 mx-auto" style="height: 250px" src="~/img/theHuntForRed.jpg" alt="Second slide" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-50 mx-auto" style="height: 250px" src="~/img/theGreatTrain.jpg" alt="Third slide" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <br />
        </div>

        <!-- The Main body of the site will dynamically render here -->
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <!-- A footer that displays the assignment name -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mission10_koletonm
        </div>
    </footer>

    <!-- Scripts imported into each page through the layout -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
